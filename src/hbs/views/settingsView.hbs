{{#> settingsLayout}}
    <section class="settings">
        <div class="settings__photo photo-input">
            <img class="photo-input__image" onerror="this.style.display='none'" src="#" alt="user avatar">
            <label class="photo-input__file photo-input__file_disabled">
                <span class="photo-input__text">Click to change photo</span>
                <input type="file" disabled class="photo-input__input" name="avatar" accept="image/*">
            </label>
        </div>
        <h2 class="settings__name">Ivan Ivanov</h2>

        <div class="settings__info form">
            <div class="form__items">
                <div class="form__item">
                    {{> defaultInput label='Chat name' disabled='true' styleClasses='default-input_dirty' value='Super Ivan' placeholder='Chat name' name='display_name'}}
                </div>
                <div class="form__item">
                    {{> defaultInput label='Login' disabled='true' styleClasses='default-input_dirty' value='s_ivan001' placeholder='Login' name='login'}}
                </div>
                <div class="form__item form__item_cut">
                    {{> defaultInput label='First name' disabled='true' styleClasses='default-input_dirty' value='Ivan' placeholder='First name' name='first_name'}}
                </div>
                <div class="form__item form__item_cut">
                    {{> defaultInput label='Last name' disabled='true' styleClasses='default-input_dirty' value='Ivanov' placeholder='Last name' name='second_name'}}
                </div>
                <div class="form__item form__item_cut">
                    {{> defaultInput type='email' disabled='true' styleClasses='default-input_dirty' label='E-mail' value='s_ivan001@yandex.ru' placeholder='E-mail' name='email'}}
                </div>
                <div class="form__item form__item_cut">
                    {{> defaultInput type='tel' disabled='true' styleClasses='default-input_dirty' label='Phone' value='89991154545' placeholder='Phone' name='phone'}}
                </div>
            </div>
            <div class="form__submit settings__tools">
                {{> routerButton pageName='"settingsEdit"' addClasses='form__submit-btn' text='Edit'}}
                {{> defaultButton action='renderModal("changePassword")' addClasses='form__submit-btn' label='Change password'}}
            </div>
            <div class="form__bottom settings__logout">
                {{> routerLink pageName='"auth"' styleClasses='link_red' text='Logout'}}
            </div>
        </div>

    </section>
{{/settingsLayout}}
