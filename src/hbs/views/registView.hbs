{{#> loginLayout }}
    <form class="form form_block login-layout__form">
        <h1 class="form__title form__title_subtitled">Sign up</h1>
        <p class="form__subtitle">Create account to start messaging</p>
        <div class="form__items">
            <div class="form__item">
                {{> defaultInput label='Login' placeholder='Login' name='login'}}
            </div>
            <div class="form__item form__item_cut">
                {{> defaultInput label='First name' placeholder='First name' name='first_name'}}
            </div>
            <div class="form__item form__item_cut">
                {{> defaultInput label='Last name' placeholder='Last name' name='second_name'}}
            </div>
            <div class="form__item">
                {{> defaultInput type='email' label='E-mail' placeholder='E-mail' name='email'}}
            </div>
            <div class="form__item">
                {{> defaultInput type='tel' label='Phone' placeholder='Phone' name='phone'}}
            </div>
            <div class="form__item">
                {{> defaultInput type='password' label='Password' placeholder='Password' name='password'}}
            </div>
        </div>
        <div class="form__submit">
            {{> defaultButton addClasses='form__submit-btn' label='Sign In'}}
        </div>
        <div class="form__bottom">
            <p class="form__bottom-notion">Already have an account?</p>
            {{> routerLink pageName='"auth"' text='Sign In'}}
        </div>
    </form>
{{/loginLayout}}