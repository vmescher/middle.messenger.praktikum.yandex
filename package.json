        "eslint": "8.28.0",
        "eslint-config-airbnb": "19.0.4",
        "parcel": "2.7.0",
        "parcel-reporter-static-files-copy": "1.4.0",
        "stylelint": "^14.15.0",
        "stylelint-config-standard-scss": "^6.1.0",
        "ts-node": "10.9.1",
        "typescript": "^4.9.3"
